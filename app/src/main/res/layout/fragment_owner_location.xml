<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/ic_backspace" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_back"
        android:layout_marginTop="@dimen/_40sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:text="@string/owner_property_location"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_location"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:paddingRight="@dimen/_10sdp"
        android:backgroundTint="@color/white">

        <EditText
            android:id="@+id/etcity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_city"
            android:inputType="text"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textColorHint="@color/light_grey"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_layout_socity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_layout_city"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:paddingRight="@dimen/_10sdp"
        android:backgroundTint="@color/white">

        <EditText
            android:id="@+id/etproject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_project"
            android:inputType="text"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textColorHint="@color/light_grey"/>

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_layout_socity"
        android:paddingLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:paddingRight="@dimen/_10sdp"
        android:backgroundTint="@color/white">

        <EditText
            android:id="@+id/et_optionl_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/optional_address"
            android:inputType="text"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textColorHint="@color/light_grey"/>

    </com.google.android.material.textfield.TextInputLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/_20sdp">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_alignParentRight="true"
            android:text="@string/btn_continue"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/btn_continue"
            android:textStyle="bold"
            android:background="@drawable/btn_style"/>



    </RelativeLayout>

</RelativeLayout>


