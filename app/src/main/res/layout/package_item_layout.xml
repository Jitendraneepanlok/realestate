<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_3sdp"
    android:elevation="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arialmt"
            android:gravity="center"
            android:text="@string/app_name"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtprice_gst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_tittle"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/arialmt"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_gst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_tittle"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toRightOf="@+id/txtprice_gst"
            android:fontFamily="@font/arialmt"
            android:gravity="center"
            android:paddingLeft="@dimen/_3sdp"
            android:text="@string/app_name"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtprice_gst"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/arialmt"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/black" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_gst"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/arialmt"
            android:gravity="center"
            android:paddingLeft="@dimen/_3sdp"
            android:layout_toRightOf="@+id/txt_off"
            android:text="@string/app_name"
            android:textColor="@color/black" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>