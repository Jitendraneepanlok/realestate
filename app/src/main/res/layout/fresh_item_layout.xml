<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_10sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_100sdp"
            android:scaleType="fitXY"
            android:id="@+id/img_dummy"
            android:src="@drawable/dummy_image"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_dummy"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/arialmt"
            android:text="@string/app_name"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingRight="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_bhk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/arialmt"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="2 BHK Flat"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_bhk"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/arialmt"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="Mahagun Moderne"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_city"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/arialmt"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="Sector 78 , Noida"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_ready"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_area"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/arialmt"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="@string/ready_to_move"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/light_grey"
            android:layout_below="@+id/txt_ready"
            android:id="@+id/view"
            android:layout_marginTop="@dimen/_10sdp"/>

       <androidx.appcompat.widget.AppCompatImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/ic_phone_red"
           android:paddingLeft="@dimen/_7sdp"
           android:paddingRight="@dimen/_5sdp"
           android:layout_marginTop="@dimen/_10sdp"
           android:layout_below="@+id/view"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call Agent"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"
            android:layout_below="@+id/view"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_185sdp"
            android:layout_marginTop="@dimen/_9sdp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>