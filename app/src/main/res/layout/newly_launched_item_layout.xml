<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_5sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_10sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_100sdp"
            android:scaleType="fitXY"
            android:id="@+id/img_dummy"
            android:src="@drawable/dummy_image"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_dummy"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/arialmt"
            android:text="@string/dummy_name"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingRight="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/arialmt"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="Sector 137, Noida"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_area"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/arialmt"
            android:paddingLeft="@dimen/_7sdp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingRight="@dimen/_5sdp"
            android:text="@string/app_name"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_bhk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/arialmt"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="@string/bhk"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_ready_tomove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_bhk"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/arialmt"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingRight="@dimen/_5sdp"
            android:text="@string/ready_to_move"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/light_grey"
            android:layout_below="@+id/txt_ready_tomove"
            android:id="@+id/view"
            android:layout_marginTop="@dimen/_10sdp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone_red"
            android:paddingLeft="@dimen/_7sdp"
            android:paddingRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/view"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Call_Owner"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/_30sdp"
            android:layout_below="@+id/view"
            android:layout_marginTop="@dimen/_12sdp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>