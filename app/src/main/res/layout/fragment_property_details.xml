<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_5sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="@dimen/_3sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/thumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:background="@drawable/imgage_style"
                        android:clickable="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/login_1" />

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/thumbnail"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/arialmt"
                        android:singleLine="true"
                        android:text="3BHK Apartment for Sale in Velachery"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp"/>


                    <TextView
                        android:id="@+id/tvsale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/arialmt"
                        android:background="@drawable/btn_style_orange"
                        android:singleLine="true"
                        android:paddingLeft="@dimen/_5sdp"
                        android:gravity="center"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="FOR SALE"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tvapartment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title"
                        android:layout_marginLeft="@dimen/_73sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/arialmt"
                        android:background="@drawable/btn_style_blue"
                        android:singleLine="true"
                        android:paddingLeft="@dimen/_5sdp"
                        android:gravity="center"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="APARTMENT"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tvstart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="187dp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_toRightOf="@+id/tvapartment"
                        android:fontFamily="@font/arialmt"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="Start From/ Rs. 1.9 Cr"
                        android:textColor="@color/black" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_below="@id/tvsale"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/imglocation"
                        android:src="@drawable/ic_location"/>


                    <TextView
                        android:id="@+id/tvlocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvsale"
                        android:layout_toRightOf="@+id/imglocation"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:fontFamily="@font/arialmt"
                        android:singleLine="true"
                        android:text="at N/A, Chennai, Tamil Nadu, India"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/tvfeature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imglocation"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:fontFamily="@font/arialmt"
                        android:singleLine="true"
                        android:paddingTop="@dimen/_3sdp"
                        android:paddingBottom="@dimen/_3sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="Feature"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_style_green"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/imgage_style"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/tvfeature"
                        android:layout_below="@+id/tvlocation"
                        android:src="@drawable/ic_heart"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:id="@+id/imgheart"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/imgheart"
                        android:layout_below="@+id/tvlocation"
                        android:src="@drawable/ic_checkmark"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/imgcorrect"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_below="@+id/tvfeature"
                        android:src="@drawable/ic_profile_user_circle"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/img_profile"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Individual : Aditya"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@+id/img_profile"
                        android:layout_below="@+id/imgheart"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:id="@+id/profile_name"
                        android:layout_marginTop="@dimen/_8sdp"/>

                    <TextView
                        android:id="@+id/tvrequest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgheart"
                        android:layout_marginLeft="48dp"
                        android:layout_marginTop="1dp"
                        android:layout_toRightOf="@+id/profile_name"
                        android:background="@drawable/btn_style_green"
                        android:gravity="center"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:singleLine="true"
                        android:text="Request Contact"
                        android:textColor="@color/white" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_5sdp">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            card_view:tabMode="scrollable"
            app:tabMaxWidth="0dp"
            android:layout_below="@+id/indicator"
            app:tabSelectedTextColor="@color/gray_demo"
            app:tabTextColor="@color/gray"
            app:tabIndicatorFullWidth="false"
            android:minHeight="?attr/actionBarSize"
            app:tabGravity="fill"
            android:layout_centerHorizontal="true"
            />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tab_layout"/>







    </LinearLayout>





</LinearLayout>