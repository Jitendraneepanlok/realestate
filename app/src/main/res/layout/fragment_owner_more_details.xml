<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/ic_backspace" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/img_back"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_more"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:text="@string/owner_property_more_details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_more"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@color/light_grey"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:text="@string/unit_details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_bedroom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_unit"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:text="@string/bedroom"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyler_bedroom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_bedroom"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:scrollbars="horizontal" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_bathroom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/recyler_bedroom"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:text="@string/bathroom"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyler_bathroom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_bathroom"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:scrollbars="horizontal" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_balconny"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/recyler_bathroom"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:text="@string/balcony"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyler_balcony"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_balconny"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:scrollbars="horizontal" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_floor_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/recyler_balcony"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@color/light_grey"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:text="@string/floor_detail"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_floor_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_floor_details"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:text="@string/floor_detail_total"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_popup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_floor_number"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:text="@string/floor"
                    android:drawableRight="@drawable/ic_expand_more"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:background="@color/light_grey"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:id="@+id/view_2"
                    android:layout_below="@+id/txt_popup"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_floor_no."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_2"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:text="@string/floor_no"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_floor_no_popup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:layout_below="@+id/txt_floor_no."
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:text="@string/select"
                    android:drawableRight="@drawable/ic_expand_more"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:background="@color/light_grey"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:id="@+id/view_3"
                    android:layout_below="@+id/txt_floor_no_popup"/>


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_furnish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_3"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@color/light_grey"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:text="@string/furnish"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />


                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_furnish"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="right"
                    android:id="@+id/rg_1"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:inputType="text"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp">

                    <RadioButton
                        android:id="@+id/radio_unfirnished"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layoutDirection="rtl"
                        android:text="@string/unfisnshing"
                        android:fontFamily="@font/arialmt"
                        android:textAlignment="textStart"
                        android:textSize="@dimen/_12sdp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/gray_light"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"/>



                    <RadioButton
                        android:id="@+id/radio_semi_firnshid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layoutDirection="rtl"
                        android:text="@string/semi_furnished"
                        android:fontFamily="@font/arialmt"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_22sdp"
                        android:textSize="@dimen/_12sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/gray_light"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"/>


                    <RadioButton
                        android:id="@+id/radio_fully_furnished"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layoutDirection="rtl"
                        android:text="@string/fully_furnished"
                        android:fontFamily="@font/arialmt"
                        android:textAlignment="textStart"
                        android:layout_marginTop="@dimen/_22sdp"
                        android:textSize="@dimen/_12sdp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/gray_light"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"/>

                </RadioGroup>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl1"
                android:id="@+id/rl2"
                android:background="@color/light_grey"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp">


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/property_Area"
                    android:fontFamily="@font/arialmt"
                    android:id="@+id/txt_pa"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/property_either"
                    android:fontFamily="@font/arialmt"
                    android:layout_below="@+id/txt_pa"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/rl2"
                android:paddingBottom="@dimen/_20sdp"
                android:paddingRight="@dimen/_10sdp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_carpet"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_location"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:backgroundTint="@color/white">

                    <EditText
                        android:id="@+id/etcarpetArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/cartpet"
                        android:inputType="text"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_grey"/>

                </com.google.android.material.textfield.TextInputLayout>


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/input_layout_carpet"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:drawableRight="@drawable/ic_expand_more"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:text="@string/sqft"
                    android:id="@+id/txt_sqft"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:paddingTop="@dimen/_3sdp"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/input_layout_carpet"
                    android:background="@color/light_grey"
                    android:layout_below="@+id/txt_sqft"/>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_layout_super"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_layout_carpet"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:backgroundTint="@color/white">

                    <EditText
                        android:id="@+id/etsuperArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/superArea"
                        android:inputType="text"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"
                        android:textColorHint="@color/light_grey"/>

                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/input_layout_super"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:drawableRight="@drawable/ic_expand_more"
                    android:layout_marginTop="@dimen/_22sdp"
                    android:text="@string/sqft"
                    android:layout_below="@+id/txt_sqft"
                    android:id="@+id/txt_sqft_2"/>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:paddingTop="@dimen/_3sdp"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/input_layout_super"
                    android:background="@color/light_grey"
                    android:layout_below="@+id/txt_sqft_2"/>


                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/arialmt"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_below="@+id/input_layout_super"
                    android:text="@string/receive_notification"/>


            </RelativeLayout>


        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/btn_style"
            android:gravity="center"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:text="@string/btn_continue"
            android:textColor="@color/white"
            android:textStyle="bold" />


    </RelativeLayout>

</RelativeLayout>


