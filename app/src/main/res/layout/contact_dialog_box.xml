<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/_2sdp"
        android:src="@drawable/ic_cancel" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:id="@+id/img_profile"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/user_profile" />

            <ImageView
                android:id="@+id/imguser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="139dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:src="@drawable/ic_profile_2" />

            <TextView
                android:id="@+id/tvname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="160dp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_18sdp"
                android:layout_toRightOf="@+id/imguser"
                android:fontFamily="@font/arialmt"
                android:text="Aditya"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:id="@+id/imgline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imguser"
                android:layout_marginLeft="139dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/ic_line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="160dp"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_below="@+id/tvname"
                android:layout_toRightOf="@+id/imgline"
                android:fontFamily="@font/arialmt"
                android:text="Individual"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp" />



        </RelativeLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/full_name"
            android:background="@drawable/edittext_style"
            android:paddingTop="@dimen/_9sdp"
            android:id="@+id/etfullname"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingBottom="@dimen/_9sdp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="@string/user_name"
            android:background="@drawable/edittext_style"
            android:paddingTop="@dimen/_9sdp"
            android:id="@+id/etemail_id"
            android:paddingLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:paddingBottom="@dimen/_9sdp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp">

        <com.hbb20.CountryCodePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ccp"
            app:ccp_defaultNameCode="IND"
            android:paddingTop="@dimen/_5sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:background="@drawable/edittext_style" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_style"
            android:inputType="number"
            android:maxLength="10"
            android:id="@+id/etphone"
            android:hint="12345467890"
            android:layout_marginLeft="@dimen/_5sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingBottom="@dimen/_12sdp"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:gravity="center">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:inputType="textPassword"
            android:gravity="start"
            android:paddingTop="@dimen/_5sdp"
            android:hint="Enter your Message"
            android:background="@drawable/edittext_style"
            android:paddingLeft="@dimen/_10sdp"
            android:id="@+id/etpassword"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I agree to Truehomes24.com Terms of use"
            android:fontFamily="@font/arialmt"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_10sdp"
            android:singleLine="true"
            android:textSize="@dimen/_12sdp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/btn_style"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/btn_register"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_for_registration"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:fontFamily="@font/arialmt"/>


    </LinearLayout>


</LinearLayout>