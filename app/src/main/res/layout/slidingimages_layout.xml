<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp"
        android:layout_gravity="center"
        app:cardCornerRadius="@dimen/_8sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_75sdp"
                android:src="@drawable/login_1"
                android:layout_margin="@dimen/_5sdp"
                android:scaleType="fitXY"
                android:background="@drawable/imgage_style"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_style_orange"
                android:text="Sale"
               android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:textColor="@color/white"
                android:fontFamily="@font/arialmt"
                android:textStyle="bold"
                android:layout_margin="@dimen/_15sdp"
                android:layout_alignParentRight="true"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7BHK Apartment for Sale in Dum Dum Park"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_below="@+id/image"
                android:paddingLeft="@dimen/_7sdp"
                android:fontFamily="@font/arialmt"
                android:id="@+id/tv_title"/>

            <TextView
                android:layout_width="match_parent"
                android:fontFamily="@font/arialmt"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:singleLine="true"
                android:id="@+id/tvlocation"
                android:layout_marginTop="@dimen/_3sdp"
                android:drawableLeft="@drawable/ic_location"
                android:paddingLeft="@dimen/_5sdp"
                android:textColor="@color/black"
                android:text=" Chennai, Tamil Nadu , India"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey"
                android:layout_below="@+id/tvlocation"
                android:layout_marginTop="@dimen/_3sdp"
                android:id="@+id/line_view"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arialmt"
                android:textColor="@color/black"
                android:text="start From / Rs. 1.9 Cr"
                android:layout_below="@+id/line_view"
                android:id="@+id/tvprice"
                android:paddingLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"/>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_view"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="340dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/tvprice"
                android:src="@drawable/ic_checkmark" />


        </RelativeLayout>





    </androidx.cardview.widget.CardView>



</LinearLayout>