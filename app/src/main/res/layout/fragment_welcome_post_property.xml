<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_margin="@dimen/_10sdp"
     android:src="@drawable/ic_backspace" />

 <androidx.appcompat.widget.AppCompatImageView
     android:id="@+id/img_back"
     android:layout_width="match_parent"
     android:layout_height="@dimen/_100sdp"
     android:scaleType="fitXY"
     android:src="@drawable/post_property_image" />

 <androidx.core.widget.NestedScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_below="@+id/img_back"
     android:scrollbars="vertical">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">


         <RelativeLayout
             android:id="@+id/rl_1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="@dimen/_10sdp"
             android:paddingBottom="@dimen/_10sdp">

             <androidx.appcompat.widget.AppCompatTextView
                 android:id="@+id/tv_sell"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:fontFamily="@font/arialmt"
                 android:paddingLeft="@dimen/_10sdp"
                 android:text="@string/post_1"
                 android:textColor="@color/black"
                 android:textSize="@dimen/_15sdp"
                 android:textStyle="bold" />

             <androidx.appcompat.widget.AppCompatTextView
                 android:id="@+id/tv_property"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/tv_sell"
                 android:layout_marginTop="@dimen/_8sdp"
                 android:fontFamily="@font/arialmt"
                 android:paddingLeft="@dimen/_10sdp"
                 android:text="@string/post_2"
                 android:textColor="@color/black"
                 android:textSize="@dimen/_15sdp"
                 android:textStyle="bold" />

             <androidx.appcompat.widget.AppCompatTextView
                 android:id="@+id/tv_tenant"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/tv_property"
                 android:layout_marginTop="@dimen/_8sdp"
                 android:fontFamily="@font/arialmt"
                 android:paddingLeft="@dimen/_10sdp"
                 android:paddingRight="@dimen/_10sdp"
                 android:text="@string/post_3"
                 android:textColor="@color/black"
                 android:textSize="@dimen/_12sdp" />

             <androidx.appcompat.widget.AppCompatTextView
                 android:id="@+id/tv_posting"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/tv_tenant"
                 android:layout_marginTop="@dimen/_10sdp"
                 android:fontFamily="@font/arialmt"
                 android:paddingLeft="@dimen/_10sdp"
                 android:text="@string/post_4"
                 android:textColor="@color/black"
                 android:textSize="@dimen/_12sdp"
                 android:textStyle="bold" />

             <androidx.appcompat.widget.AppCompatTextView
                 android:id="@+id/tv_price"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/tv_posting"
                 android:layout_marginTop="@dimen/_5sdp"
                 android:fontFamily="@font/arialmt"
                 android:paddingLeft="@dimen/_10sdp"
                 android:paddingRight="@dimen/_5sdp"
                 android:text="@string/post_5"
                 android:textColor="@color/red"
                 android:textSize="@dimen/_12sdp"
                 android:textStyle="bold" />

             <androidx.appcompat.widget.AppCompatTextView
                 android:id="@+id/tv_free"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/tv_posting"
                 android:layout_marginLeft="@dimen/_10sdp"
                 android:layout_marginTop="@dimen/_5sdp"
                 android:layout_toRightOf="@+id/tv_price"
                 android:background="@drawable/btn_style_yellow"
                 android:fontFamily="@font/arialmt"
                 android:gravity="center"
                 android:paddingLeft="@dimen/_5sdp"
                 android:paddingRight="@dimen/_5sdp"
                 android:text="@string/post_6"
                 android:textColor="@color/black"
                 android:textSize="@dimen/_12sdp"
                 android:textStyle="bold" />


             <androidx.appcompat.widget.AppCompatImageView
                 android:id="@+id/img_tick_1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/tv_free"
                 android:layout_marginLeft="@dimen/_12sdp"
                 android:layout_marginTop="@dimen/_10sdp"
                 android:src="@drawable/ic_tick" />

             <androidx.appcompat.widget.AppCompatTextView
                 android:id="@+id/tv_photo"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/tv_free"
                 android:layout_alignParentRight="true"
                 android:layout_marginTop="@dimen/_10sdp"
                 android:layout_toRightOf="@+id/img_tick_1"
                 android:fontFamily="@font/arialmt"
                 android:paddingLeft="@dimen/_10sdp"
                 android:text="@string/post_7"
                 android:textColor="@color/black" />

             <androidx.appcompat.widget.AppCompatImageView
                 android:id="@+id/img_tick_2"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/tv_photo"
                 android:layout_marginLeft="@dimen/_12sdp"
                 android:layout_marginTop="@dimen/_10sdp"
                 android:src="@drawable/ic_tick" />

             <androidx.appcompat.widget.AppCompatTextView
                 android:id="@+id/tv_response"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/tv_photo"
                 android:layout_alignParentRight="true"
                 android:layout_marginTop="@dimen/_10sdp"
                 android:layout_toRightOf="@+id/img_tick_2"
                 android:fontFamily="@font/arialmt"
                 android:paddingLeft="@dimen/_10sdp"
                 android:text="@string/post_8"
                 android:textColor="@color/black" />

             <androidx.appcompat.widget.AppCompatImageView
                 android:id="@+id/img_tick_3"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/tv_response"
                 android:layout_marginLeft="@dimen/_12sdp"
                 android:layout_marginTop="@dimen/_10sdp"
                 android:src="@drawable/ic_tick" />

             <androidx.appcompat.widget.AppCompatTextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/tv_response"
                 android:layout_alignParentRight="true"
                 android:layout_marginTop="@dimen/_10sdp"
                 android:layout_toRightOf="@+id/img_tick_3"
                 android:fontFamily="@font/arialmt"
                 android:paddingLeft="@dimen/_10sdp"
                 android:text="@string/post_9"
                 android:textColor="@color/black" />

         </RelativeLayout>

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/rl_1"
             android:paddingTop="@dimen/_5sdp"
             android:paddingBottom="@dimen/_5sdp"
             android:background="@color/trasparygray">


             <androidx.appcompat.widget.AppCompatTextView
                 android:id="@+id/tv_10x"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_margin="@dimen/_5sdp"
                 android:paddingLeft="@dimen/_10sdp"
                 android:text="@string/pos_10"
                 android:textColor="@color/black"
                 android:textSize="@dimen/_12sdp" />

             <androidx.recyclerview.widget.RecyclerView
                 android:id="@+id/post_recyler_view"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/tv_10x"
                 android:layout_marginLeft="@dimen/_10sdp"
                 android:layout_marginTop="@dimen/_5sdp"
                 android:layout_marginRight="@dimen/_10sdp"
                 android:scrollbars="horizontal" />


         </RelativeLayout>



     </RelativeLayout>

 </androidx.core.widget.NestedScrollView>

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"
     android:background="@color/white"
     android:layout_marginBottom="@dimen/_10sdp">

     <androidx.appcompat.widget.AppCompatButton
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginRight="@dimen/_15sdp"
         android:layout_alignParentRight="true"
         android:text="@string/btn_continue"
         android:paddingLeft="@dimen/_10sdp"
         android:paddingRight="@dimen/_10sdp"
         android:gravity="center"
         android:textColor="@color/white"
         android:id="@+id/btn_continue"
         android:textStyle="bold"
         android:background="@drawable/btn_style"/>

     <androidx.appcompat.widget.AppCompatImageView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/ic_baseline_star_24"
         android:layout_below="@+id/btn_continue"
         android:id="@+id/img_star"
         android:paddingTop="@dimen/_7sdp"
         android:paddingRight="@dimen/_3sdp"
         android:paddingLeft="@dimen/_10sdp"/>

     <androidx.appcompat.widget.AppCompatTextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/btn_continue"
         android:text="@string/pos_11"
         android:layout_alignParentRight="true"
         android:layout_toRightOf="@+id/img_star"
         android:paddingTop="@dimen/_6sdp"
         android:id="@+id/tv_terms"
         android:fontFamily="@font/arialmt"/>

 </RelativeLayout>


</RelativeLayout>